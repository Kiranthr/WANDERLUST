<% layout("/layouts/boilerplate") %>
<div class="row mt-3">
     <h1 class="col-6 offst-3">Sign Up on wanderlust</h1>
        <div class="col-8 offset-2" >
    <br>
    <form method="POST" action="/signup" novalidate class="needs-validation">
        <div>
         <label for="username" class="form-label">Username</label>
        <input name="user[username]" id="username" placeholder="Enter your username" type="text" class="form-control" required>
        <div class="valid-feedback">
      Looks good!
    </div>
    <div class="invalid-feedback">
        Please provide a valid username.
        </div>
        </div>
        <br><div class="mb-3">
        <label for="Email" class="form-label">Email</label>
        <input name="user[email]" id="Email" placeholder="Enter your email" type="email" class="form-control" required>
        <div class="valid-feedback">
      Looks good!
    </div>
    <div class="invalid-feedback">
        Please provide a valid email.
        </div>
        </div>
        <br><div class="mb-3">
        <label for="Password" class="form-label">Password</label>
        <input name="user[password]" id="Password" placeholder="Enter your password" type="password" class="form-control" required>
        <div class="valid-feedback">
      Looks good!
    </div>
    <div class="invalid-feedback">
        Please provide a valid password.
        </div>
        </div>
        <br>
        <button class="btn btn-primary" type="submit">Sign Up</button>
    </form>
    </div>
</div>
